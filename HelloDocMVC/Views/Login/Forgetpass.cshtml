@{
    ViewData["Title"] = "View";
}
@model HelloDocMVC.Entity.Models.Patient;    
<body class="backimg">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center heading">
                <img src="~/images/Fig56._Patient_site_1-removebg-preview.png" alt="Patient">
                <div class="Moon">
                    <i class="fa fa-light fa-moon-o fa-2x text-info"></i>
                </div>
            </div>
        </div>
        <div class="patient text-center d-flex flex-column align-item-center justify-content-center">
            <div class="back">
                <a asp-controller="Login" asp-action="Index"><i class='fa fa-angle-left fa-lg my-2 text-info'>Back</i></a>
            </div>
            <h3 class="my-4">Reset Your Password</h3>
            <div class="text-center d-flex flex-column align-item-center justify-content-center">
                <form class="d-flex align-items-center justify-content-center flex-column formBody" method="post" asp-action="ResetEmail" asp-controller="Login">
                    <div class="col-md-6 col-lg-4 col-xl-3 form-floating mb-3 d-flex justify-content-center align-item-center">
                        <input type="email" class="form-control" id="email" placeholder="Email" name="email">
                        <label for="email">
                            Email address
                        </label>
                        <i class="fa fa-user-circle-o icon" aria-hidden="true"></i>
                    </div>
                    <div class="col-md-6 col-lg-4 col-xl-3 d-flex justify-content-center align-items-center mb-3">
                        <button type="submit" class="btn btn-info btn-block mb-4 form-control text-light ">
                            Reset Password
                        </button>
                    </div>
                </form>
                <div class="col">
                    <a asp-controller="Login" asp-action="Index" class="link-underline link-underline-opacity-0 text-info">
                        <i class='fa fa-angle-left fa-lg my-2 text-info'>Back to Login</i>
                    </a>
                </div>
            </div>
        </div>
</body>

