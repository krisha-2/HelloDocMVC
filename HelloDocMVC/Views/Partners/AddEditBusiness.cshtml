﻿@{
    Layout = "_LayoutAdminDashboard";
    ViewData["Title"] = "Partners";
}
@using HelloDocMVC.Entity.DataModels;
@using static HelloDocMVC.Entity.Models.Constant;
@model HealthProfessional;

<div class="d-flex justify-content-between align-items-center container pb-1 mt-4">
    <div class="d-flex align-self-center">
        <h3 class="">@ViewData["Heading"] Business </h3>
    </div>
    <div class=" btn d-flex justify-content-end">
        <a class="btn  btn-outline-info shadow-none" asp-action="Index" asp-controller="Partners">
            <i class="fa fa-angle-left pe-1 text-info"> </i> Back
        </a>
    </div>
</div>
<div class="bg-white reqform p-3 container ">
    <form class="bg-white sbox" method="post" asp-action="EditPartnersData" asp-controller="Partners">
        <input type="hidden" asp-for="VendorId" />
        <div class="row">
            <div class="mb-3 col-lg-6 form-floating">
                <input asp-for="VendorName" type="text" class="form-control" placeholder="Business Name" required>
                <label class="form-label" for="BusinessName">Business Name</label>
                <span asp-validation-for="VendorName" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <select class="form-select mb-3" id="Profession" asp-for="Profession" asp-items="@(new SelectList(ViewBag.Professions,"HealthProfessionalId","ProfessionName"))" required>
                    <option selected>Select Profession</option>
                </select>
                <label class="fs-6" for="Profession">Profession</label>
                <span asp-validation-for="Profession" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input asp-for="FaxNumber" type="text" class="form-control" placeholder="Fax Number">
                <label class="form-label" for="FaxNo"> Fax Number</label>
            </div>
            <div class="mb-3 col-lg-6 form-floating phone">
                <input type="tel" asp-for="PhoneNumber" class="form-control shadow-none" id="phone" required>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input asp-for="BusinessContact" type="text" class="form-control" placeholder="BusinessContact" id="BusinessContact">
                <label for="BusinessContact" class="form-label">Business Contact </label>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input asp-for="Email" type="email" class="form-control" placeholder="abc@email.com" id="Email"
                       aria-describedby="emailHelp" required>
                <label for="email" class="form-label">E-mail</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input type="text" asp-for="Address" class="form-control" id="Street" placeholder="Street">
                <label for="Street" class="form-label">Street</label>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input type="text" asp-for="City" class="form-control" id="City" placeholder="City">
                <label for="City" class="form-label">City</label>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input type="text" asp-for="State" class="form-control" id="State" placeholder="State">
                <label for="State" class="form-label">State</label>
            </div>
            <div class="mb-3 col-lg-6 form-floating">
                <input type="text" asp-for="Zip" class="form-control" id="Zip-code" placeholder="Zip-code" required>
                <label for="Zip-code" class="form-label">Zip-code</label>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button class="btn btn-info me-2" type="submit">
                Save
            </button>
            <button type="reset" class="btn  btn-outline-info deleterolebutton">
                Cancel
            </button>
        </div>
    </form>
</div>