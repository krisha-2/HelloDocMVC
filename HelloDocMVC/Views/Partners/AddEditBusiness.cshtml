﻿@{
    Layout = "_Layout";
}
@model HelloDocMVC.Entity.Models.PartnersData;
<div class="d-flex justify-content-center bg-light">
    <div class="d-flex flex-column my-2 col-lg-8 col-md-10">
        <div class="d-flex justify-content-between px-2">
            <div>
                <strong class="fs-4">
                    @ViewData["Status"] Business
                </strong>
            </div>
            <div>
                <a asp-controller="Partners" asp-action="Index" class="btn border border-info shadow-none">
                    <strong class="text-info">
                        <i class="fa fa-chevron-left" aria-hidden="true"></i> Back
                    </strong>
                </a>
            </div>
        </div>
        <div class="shadow bg-white rounded m-2 p-3">
            <form method="post" asp-controller="Partners" asp-action="AddBusiness">
                <input type="hidden" asp-for="VendorId" />
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="VendorName" type="text" class="form-control shadow-none input" id="BusinessName" placeholder="Enter Business Name">
                            <label for="BusinessName">Business Name</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <select asp-for="ProfessionId" class="form-select form-control shadow-none input" id="ProfessionType" required
                                    asp-items="@(new SelectList(ViewBag.Profession, "HealthProfessionalId", "ProfessionName"))" onchange="GetProfession()">
                                <option value="-1">Profession</option>
                            </select>
                            <label for="ProfessionType">Profession</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="FaxNumber" type="tel" class="form-control shadow-none input" id="FaxNumber" placeholder="Enter Fax Number">
                            <label for="FaxNumber">Fax Number</label>
                        </div>
                    </div>
                    <div class="col-md-6 phone">
                        <div class="form-floating mb-3 h-100">
                            <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none input" id="phone" autocomplete="off" placeholder="Enter phone Number">
                            <label for="phone">Phone Number</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Email" type="email" class="form-control shadow-none input" id="Email" placeholder="Enter Email">
                            <label for="Email">Email</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="BusinessContact" type="text" class="form-control shadow-none input" id="BusinessContact" placeholder="Enter Business Contact">
                            <label for="BusinessContact">Business Contact</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Address" type="text" class="form-control shadow-none input" id="Street" placeholder="Enter Street" autocomplete="off">
                            <label for="Street">Street</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="City" type="text" class="form-control shadow-none input" id="City" placeholder="Enter City" autocomplete="off">
                            <label for="City">City</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="State" type="text" class="form-control shadow-none input" id="State" placeholder="Enter State" autocomplete="off">
                            <label for="State">State</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="ZipCode" type="text" class="form-control shadow-none input" id="ZipCode" placeholder="Enter Zip Code" autocomplete="off">
                            <label for="ZipCode">Zip / Postal</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-info text-white" id="edit" onclick="toggleFormElementsBusiness()">Edit</button>
                    <button type="submit" id="save" class="btn btn-info text-white mx-2">Save</button>
                    <button type="button" id="cancel" class="btn border border-info text-info shadow-none" onclick="location.reload()">Cancel</button>
                    <input type="submit" class="btn btn-success text-white" id="add" value="Create Account" />
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    if ("@ViewData["Status"]" == "Edit") {
        window.onload = function (e) {
            toggleFormElementsBusiness('true');
        }
        $('#add').css("display", "none");
    }
    else {
        $('#edit, #save, #cancel').css("display", "none");
    }

    function toggleFormElementsBusiness(bDisabled) {
        var inputs = document.getElementsByClassName("input");
        var submit = document.getElementById("save");
        var cancel = document.getElementById("cancel");
        var editprofile = document.getElementById("edit");
        for (var i = 0; i < inputs.length; i++) {
            inputs[i].disabled = !inputs[i].disabled;
        }
        if (inputs[0].disabled) {
            submit.style.display = "none";
            cancel.style.display = "none";
            editprofile.style.display = "block";
        } else {
            submit.style.display = "block";
            cancel.style.display = "block";
            editprofile.style.display = "none";
        }
    }
</script>