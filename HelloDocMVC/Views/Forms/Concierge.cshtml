@{
    ViewData["Title"] = "Concierge";
}
@using HelloDocMVC.Entity.Models;
@model Concierge;
<body class="bg-light">
    <div class="backBtn">
        <a asp-controller="Forms" asp-action="Index"><i class='fa fa-angle-left text-info p-2'>Back</i></a>
    </div>
    <form class="bg-white container mt-5 sbox p-5" method="post" >
        <h5><b>Concierge Information</b></h5>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="First_Name" type="text" class="form-control" id="fname" placeholder="Your First Name">
                <label for="fname">Your First Name</label>
                <span asp-validation-for="First_Name" class="text-danger"></span>
            </div>
            <div class="col-md-6 p-3 form-floating">
                <input asp-for="Last_Name" type="text" class="form-control" id="lname" placeholder="Your Last Name">
                <label for="lname">Your Last Name</label>
            </div>
        </div>
        <div class="row">
            <div class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating my-3">
                <input asp-for="Phone_Number" type="tel" class="form-control shadow-none" id="phone">
                <span asp-validation-for="Phone_Number" class="text-danger"></span>
            </div>
            <div class="col-md-6 p-3 form-floating">
                <input asp-for="E_mail" type="email" class="form-control" id="Email" placeholder="Your Email">
                <label for="Email">Your Email</label>
                <span asp-validation-for="E_mail" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input type="text" class="form-control" id="HotelPropertyName" placeholder="Hotel/Property Name">
                <label for="HotelPropertyName">Hotel/Property Name</label>
            </div>
        </div>
        <h5><b>Concierge Location</b></h5>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="Street" type="text" class="form-control" id="name" placeholder="Street">
                <label for="name">Street</label>
            </div>
            <div class="col-md-6 p-3 form-floating">
                <input asp-for="City" type="text" class="form-control" id="naming" placeholder="City">
                <label for="naming">City</label>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="State" type="text" class="form-control" id="name" placeholder="State">
                <label for="name">State</label>
            </div>
            <div class="col-md-6 p-3 form-floating">
                <input asp-for="ZipCode" type="text" class="form-control" id="naming" placeholder="ZipCode">
                <label for="naming">Zipcode</label>
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
        </div>
        <h5><b>Patient Information</b></h5>
        <div class="form-group p-3">
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="2" placeholder="Enter Brief Details of Symptoms"></textarea>
        </div>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="FirstName" type="text" class="form-control" id="name" placeholder="FName">
                <label for="name">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col-md-6 p-3 form-floating">
                <input asp-for="LastName" type="text" class="form-control" id="naming" placeholder="LName">
                <label for="naming">Lastname</label>
            </div>
            <div class="row">
                <div class="form-group col-md-6 p-3 form-floating">
                    <input asp-for="DOB" type="date" class="form-control" id="name" placeholder="DOB">
                    <label for="name">Date of Birth</label>
                </div>
            </div>
        </div>
        <h5><b>Patient Contact Information</b></h5>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="Email" type="text" class="form-control" id="Email" placeholder="Email">
                <label for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 form-floating my-3">
                <input asp-for="PhoneNumber" type="tel" class="form-control shadow-none" id="phone1">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <h5><b>Patient Location</b></h5>
        <div class="row">
            <div class="form-group col-md-6 p-3 form-floating">
                <input asp-for="RoomSuite" type="text" class="form-control" id="name" placeholder="Room">
                <label for="name">Room #/Suite(Optional)</label>
            </div>
        </div>
        <div class="d-flex justify-content-end">
            <button  type="submit" class="btn btn-info text-white mx-2">Submit</button>
            <button class="btn btn-outline-info text-info">Cancel</button>
        </div>
    </form>
    <script src="~/js/custom.js"></script>
    <script src="~/js/form.js"></script>
</body>
